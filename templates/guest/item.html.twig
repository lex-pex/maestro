{% extends 'layouts/base.html.twig' %}
{% block title %}{% if title is defined %}{{ title }}{% endif %}{% endblock %}
{% block content %}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card m-1">
                <div class="card-header text-center"><h6>{{ item.title }}</h6></div>
                <div class="card-body">
                    <p><img src="{{ item.image ? asset(item.image) : asset('img/empty.jpg') }}" width="100%"/></p>
                    <p>{{ item.text }}</p>
                </div>
                <div class="card-footer">
                    <div class="row">
                        <div class="col-6">
                            <small><a href="{{ path('category', {alias: categories[item.categoryId].alias}) }}">{{ categories[item.categoryId].name }}</a></small>
                        </div>
                        <div class="col-6 text-right">
                            <small>
                                Created:
                                {{ item.createdAt ? item.createdAt.format('y-m-d H:i') : 'Date unknown' }}<br/>
                                Updated:
                                {{ item.updatedAt ? item.updatedAt.format('y-m-d H:i') : 'Have no updated' }}
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
